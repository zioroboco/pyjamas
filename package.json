{
  "name": "pyjamas",
  "private": true,
  "workspaces": [
    "demos/*",
    "packages/*"
  ],
  "scripts": {
    "demo": "yarn workspace @demos/elm demo",
    "elm": "cd demos/elm && ../../node_modules/.bin/elm",
    "reset": "./scripts/reset.sh",
    "storybook": "start-storybook",
    "test": "jest",
    "static": "yarn compile && yarn lint && yarn format",
    "lint": "tslint --project .",
    "format": "prettier --check **/*.{ts,tsx}",
    "compile": "yarn workspaces run tsc --noEmit"
  },
  "dependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.5",
    "jest": "^24.7.1",
    "jest-circus": "^24.7.1",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3",
    "typescript-tslint-plugin": "^0.3.1"
  }
}
